<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.will.ssconlineversion.SearchView">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText" android:hint="@string/enter_here"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="19dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:text="@string/recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp" android:id="@+id/recent"
                android:visibility="visible"/>
            <Button
                android:text="@string/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clear" android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:elevation="8dp"
                android:onClick="clear"
                android:textIsSelectable="false" tools:ignore="RelativeOverlap,SmallSp"
                android:textSize="12sp" android:textColor="@android:color/background_light"/>
        </RelativeLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="409dp"
            android:id="@+id/list"  />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cancel"
        android:text="@string/cancel"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

</LinearLayout>
